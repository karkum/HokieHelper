			android:padding="10dp"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/closed_halls_block6"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:padding="10dp"
			android:visibility="gone"/>
		</LinearLayout>
    	<LinearLayout
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal"
    		android:id="@+id/closed_halls_row3">
		<ImageView
			android:id="@+id/closed_halls_block7"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:padding="10dp"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/closed_halls_block8"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:padding="10dp"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/closed_halls_block9"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:padding="10dp"
			android:visibility="gone"/>
		</LinearLayout>
		    	<LinearLayout
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal"
    		android:id="@+id/closed_halls_row4">
		<ImageView
			android:id="@+id/closed_halls_block10"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:padding="10dp"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/closed_halls_block11"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:padding="10dp"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/closed_halls_block12"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:padding="10dp"
			android:visibility="gone"/>
		</LinearLayout>
    </LinearLayout>
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/closed_view"
    	android:id="@+id/statusRefreshLayout"
    	android:gravity="center" >
    	
    	<ImageView
    		android:id="@+id/divider"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:src="@drawable/divider"
    		android:padding="10dp"/>
    	
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:paddingBottom="10dp" >
    	
    	<TextView
    		android:id="@+id/lastUpdatedStatus"
    		android:textColor="#660000"
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:textSize="12dp"
    		android:gravity="center_vertical"
    		android:textStyle="bold"
    		android:text="the last updated text and time will be here" />
    		
    	<ImageView
    		android:id="@+id/refresh"
    		android:layout_width="24dp"
    		android:layout_height="24dp"
    		android:gravity="center_vertical"
    		android:src="@drawable/refresh"
			android:padding="5dp" />
    		
    	</LinearLayout>
    	</LinearLayout>    
</RelativeLayout>
</ScrollView>
</LinearLayout>