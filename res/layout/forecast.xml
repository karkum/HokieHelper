				android:gravity="center" android:paddingLeft="2sp"
				android:layout_height="fill_parent" android:orientation="vertical">
				<TextView android:id="@+id/day_1" android:layout_width="129dp"
					android:layout_height="wrap_content" android:paddingTop="12sp"
					android:textColor="#000000" android:textSize="22sp"
					android:gravity="center" />
				<TextView android:id="@+id/cond_1" android:layout_width="129dp"
					android:layout_height="wrap_content" android:paddingTop="1sp"
					android:textColor="#000000" android:textSize="20sp"
					android:gravity="center" />
			</LinearLayout>

			<ImageView android:id="@+id/day_1_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:padding="2sp">
			</ImageView>
			<LinearLayout android:layout_width="fill_parent"
				android:gravity="center|right" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:id="@+id/day_1_high"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:paddingTop="12sp" android:textColor="#000000" 
					android:textSize="22sp" />

				<TextView android:id="@+id/day_1_low" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingTop="12sp"
					android:paddingLeft="2sp" android:textColor="#8E8E8E"
					android:textSize="16sp" />
			</LinearLayout>
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
